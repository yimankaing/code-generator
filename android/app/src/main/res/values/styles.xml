<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorAccent">@color/primary_dark</item>
        <item name="android:color">@color/primary_dark</item>

    </style>
    <style name="SplashScreenTheme" parent="SplashScreen_SplashTheme">
        <item name="android:windowLightStatusBar">false</item>
    </style>


    <style name="ListViewStyle" parent="Base.Widget.AppCompat.ListView">
        <item name="android:divider">@color/light_gray</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="DeviceListTheme" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:listViewStyle">@style/ListViewStyle</item>
    </style>


</resources>
